<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="@dimen/item_main_height">
        <ImageView
            android:id="@+id/item_main_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_main_title"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/enter"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/icon_width_normal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_sub"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="@dimen/item_sub_height">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_sub_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>